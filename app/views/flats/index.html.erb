<div class="container">

  <h1 class="mb-5 mt-5">Flats (<%= @flats.count %>)</h1>

  <div class="flat-cards">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat.id) do %>
        <div class="main-card card-shadow d-flex flex-column justify-content-between round">
          <div class="card-image">
            <%= image_tag flat.photo_url, alt: "House picture", style: 'width:100%', class: "top-round" %>
          </div>
          <div class="card-details">
            <div class="info">
              <h3><%= flat.name %></h3>
              <p><%= flat.address %></p>
            </div>
            <div class="d-flex justify-content-around">
              <p><%= flat.number_of_guests %> <i class="fas fa-users"></i></p>
              <p><%= flat.price_per_night %> â‚¬ /night</p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
