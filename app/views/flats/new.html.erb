<div class="row">

  <div class="col-6 m-auto bg-light rounded p-5">
    <%= simple_form_for ( @new_flat ) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Add flat", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
